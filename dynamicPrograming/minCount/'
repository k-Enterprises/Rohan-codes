#include <iostream>
#include <climits>
#include <cmath>
using namespace std;

int helper(int n, int min) {
	if(n == 1) {
		return 1;
	} else if(n < 1) {
		return 0;
	}
	for(int i = 1; i < sqrt(n); i ++) {
		int square = helper(n - (i * i), min);
		if(square < min) {
			min = square;
		}  
	}
return min;
}

int minCount(int n) {
	int min = INT_MAX;
	int ans = helper(n, min);
return ans;
}

int main() {
	int n;
	cout << "Emter the value of n: ";
	cin >> n;
	int ans = minCount(n);
	cout << "Min count value is: " << ans << endl;
return 0;
}
